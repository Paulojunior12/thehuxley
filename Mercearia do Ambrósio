#include <stdio.h>

int main()
{
    double valor[4]={5.30, 6.00, 3.20, 2.50};
    int cod, quant;
    double total;

 
    scanf("%d", &cod);
   
    scanf("%d", &quant);

    total=quant*valor[cod-1];

    if(quant>=15||total>=40.0)
        total*=0.85;

    printf("R$ %.2lf\n", total);

	return 0;
}
